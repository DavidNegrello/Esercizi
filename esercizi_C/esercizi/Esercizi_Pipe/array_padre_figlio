#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h>
#define buffer_size 1024
#define indiceVettore 5
int main(int argc, char *argv[])
{

    int p, n;
    int fattore;
    int vettoreInteri[5];
    int fd[2];
    char buffer[buffer_size];
    if (pipe(fd) == -1)
    {
        printf("Errore nella creazione della pipe\n");
        exit(-1);
    }

    p = fork();
    if (p < 0) // controllo creazione processo
    {
        printf("Errone nella creazione del processo");
    }

    if (p > 0) // padre
    {
        printf("Pid padre: %d\n", getpid());
        
        close(fd[1]);
        n = read(fd[0], vettoreInteri, indiceVettore);
        if (n == -1) // dire dimensione della read
        {
            printf("Errore lettura dalla pipe\n");
            exit(-1);
        }
        else
        {
             wait(0); 
            buffer[n] = '\0'; // carattere terminatore
            printf("Messaggio ricevuto: %s\n", buffer);
            printf("Inserisci un fattore\n");
            scanf("%d", fattore);
            for (int i = 0; i < indiceVettore; i++)
            {
                printf("La moltiplicazione Ã¨: %d\n",vettoreInteri[i]*fattore);
            }
            
            close(fd[0]);
        }
    }
    else // fliglio
    {
        printf("Pid figlio: %d\n", getpid());
        close(fd[0]);

        for (int i = 0; i < indiceVettore; i++)
        {
            printf("Inserisci un numero");
            scanf("%d", vettoreInteri[i]);
        }

        write(fd[1], vettoreInteri, indiceVettore);
         
        
            close(fd[1]);
    }
    return 0;
}