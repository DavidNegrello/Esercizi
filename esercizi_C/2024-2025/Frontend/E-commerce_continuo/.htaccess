# Abilita il motore di riscrittura
RewriteEngine On

# Imposta la directory base
RewriteBase /

# Impedisci l'accesso diretto ai file PHP nella directory config
<FilesMatch "^(database|setup|sample_data)\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Proteggi il file .htaccess
<Files .htaccess>
    Order Allow,Deny
    Deny from all
</Files>

# Imposta l'header Content-Type per i file JSON
<FilesMatch "\.json$">
    Header set Content-Type "application/json"
</FilesMatch>

# Abilita la compressione GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Imposta la cache del browser
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/json "access plus 0 seconds"
</IfModule>

# Imposta il charset predefinito
AddDefaultCharset UTF-8

# Imposta il PHP error reporting
php_flag display_errors Off
php_value error_reporting E_ALL & ~E_NOTICE & ~E_DEPRECATED